<Page
    x:Class="Monica.Windows.Views.CardDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32,24,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Back Button -->
        <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
            <Button x:Name="BackButton" Click="BackButton_Click" 
                    Background="Transparent" BorderThickness="0" Padding="8">
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
            </Button>
            <TextBlock x:Name="PageTitle" Text="证件详情" 
                       Style="{ThemeResource TitleLargeTextBlockStyle}" 
                       VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Two Column Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="320"/>
                <ColumnDefinition Width="*" MinWidth="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- LEFT: Card Visual + Info -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,16,0">
                <StackPanel Spacing="16">
                    
                    <!-- Card Visual -->
                    <Border x:Name="CardVisual"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="12" Padding="20"
                            HorizontalAlignment="Left" MaxWidth="380">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Card Header -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                        CornerRadius="5" Width="32" Height="32">
                                    <FontIcon Glyph="&#xE8A3;" FontSize="16" Foreground="White"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="CardTypeText" Text="身份证" 
                                           FontSize="14" FontWeight="SemiBold" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Card Main Info -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" Spacing="4" Margin="0,12,0,12">
                                <TextBlock x:Name="CardMainNumber" Text="110***1234" 
                                           FontSize="18" FontWeight="Bold"
                                           FontFamily="Consolas"/>
                                <TextBlock x:Name="CardHolderName" Text="张三" 
                                           FontSize="13" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            
                            <!-- Card Footer -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="24">
                                <StackPanel x:Name="IssuedDatePanel">
                                    <TextBlock Text="签发日期" FontSize="10" 
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock x:Name="CardIssuedDate" Text="2020-01-01" FontSize="11"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="有效期至" FontSize="10" 
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock x:Name="CardExpiryDate" Text="2030-01-01" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Info Fields -->
                    <StackPanel x:Name="InfoFieldsPanel" Spacing="8">
                        <!-- Will be populated dynamically -->
                    </StackPanel>
                    
                    <!-- Notes -->
                    <StackPanel x:Name="NotesSection" Visibility="Collapsed" Spacing="4">
                        <TextBlock Text="备注" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock x:Name="NotesText" TextWrapping="Wrap" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- RIGHT: Photos -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="16,0,0,0">
                <StackPanel x:Name="PhotosPanel" Spacing="16">
                    <TextBlock Text="证件照片" FontSize="16" FontWeight="SemiBold"/>
                    
                    <!-- Front Photo -->
                    <StackPanel x:Name="FrontPhotoPanel" Spacing="8" Visibility="Collapsed">
                        <TextBlock Text="正面" FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Border CornerRadius="8" BorderThickness="1"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Image x:Name="FrontImage" Stretch="Uniform" MaxHeight="250"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Back Photo -->
                    <StackPanel x:Name="BackPhotoPanel" Grid.Column="1" Spacing="8" Visibility="Collapsed">
                        <TextBlock Text="背面" FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Border CornerRadius="8" BorderThickness="1"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Image x:Name="BackImage" Stretch="Uniform" MaxHeight="250"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- No Photos Message -->
                    <TextBlock x:Name="NoPhotosText" Text="暂无证件照片" 
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center" Margin="0,40,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
