<Page
    x:Class="Monica.Windows.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="400" Spacing="24">
            <!-- Header -->
            <StackPanel HorizontalAlignment="Center" Spacing="8">
                <TextBlock Text="Monica" Style="{ThemeResource TitleTextBlockStyle}" 
                           HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="安全访问" Style="{ThemeResource BodyTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Login Card -->
            <Grid>
                <!-- Login State -->
                <StackPanel x:Name="LoginPanel" Spacing="16" Visibility="Visible">
                    <PasswordBox x:Name="PasswordInput" 
                                 PlaceholderText="输入主密码" 
                                 Header="主密码"
                                 KeyDown="PasswordInput_KeyDown"/>
                    
                    <Button x:Name="UnlockButton" 
                            Content="解锁" 
                            Style="{ThemeResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Click="UnlockButton_Click"/>

                    <HyperlinkButton Content="忘记密码？" 
                                     HorizontalAlignment="Center"
                                     Click="ForgotPassword_Click"/>

                    <TextBlock x:Name="LoginErrorText" 
                               Text="" 
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- First Time Setup State -->
                <StackPanel x:Name="SetupPanel" Spacing="16" Visibility="Collapsed">
                    <TextBlock Text="设置主密码" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    
                    <PasswordBox x:Name="SetupPasswordInput" 
                                 PlaceholderText="设置新密码" 
                                 Header="主密码"/>
                    
                    <PasswordBox x:Name="SetupConfirmPasswordInput" 
                                 PlaceholderText="再次输入密码" 
                                 Header="确认密码"/>

                    <Button x:Name="SetupButton" 
                            Content="开始使用" 
                            Style="{ThemeResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,16,0,0"
                            Click="SetupButton_Click"/>

                    <TextBlock x:Name="SetupErrorText" 
                               Text="" 
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Reset Password State -->
                <StackPanel x:Name="ResetPanel" Spacing="16" Visibility="Collapsed">
                    <TextBlock Text="重置密码" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    
                    <TextBlock x:Name="ResetQuestionText" 
                               Text="问题：" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               TextWrapping="Wrap"/>

                    <PasswordBox x:Name="ResetAnswerInput" 
                                 PlaceholderText="请输入答案" 
                                 Header="验证答案"/>

                    <Button x:Name="VerifyAnswerButton" 
                            Content="验证并重置" 
                            Style="{ThemeResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Click="VerifyAnswerButton_Click"/>

                    <TextBlock Text="注意：重置密码将清除旧数据" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemFillColorCautionBrush}"
                               HorizontalAlignment="Center"/>

                    <Button Content="返回登录" 
                            HorizontalAlignment="Stretch"
                            Click="CancelReset_Click"/>

                    <TextBlock x:Name="ResetErrorText" 
                               Text="" 
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Text="AES-256-GCM 加密" 
                   Style="{ThemeResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,24"/>
    </Grid>
</Page>
