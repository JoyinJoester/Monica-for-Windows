<Page
    x:Class="Monica.Windows.Views.NoteEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TextBox Brush Overrides for Transparency -->
        <SolidColorBrush x:Key="TextControlBackground" Color="Transparent"/>
        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent"/>
        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
        <SolidColorBrush x:Key="TextControlBorderBrush" Color="Transparent"/>
        <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="Transparent"/>
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
        
        <!-- Transparent TextBox Style - no hover/focus background -->
        <Style x:Key="TransparentTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid Padding="32,24,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title Input (First Line = Title, Bold & Large) -->
        <TextBox x:Name="TitleBox" 
                 Style="{StaticResource TransparentTextBoxStyle}"
                 PlaceholderText="笔记标题..."
                 FontSize="28" FontWeight="Bold"
                 Margin="0,0,0,16"
                 TextChanged="TitleBox_TextChanged"/>
        
        <!-- Content Area -->
        <TextBox x:Name="ContentBox" Grid.Row="1"
                 Style="{StaticResource TransparentTextBoxStyle}"
                 PlaceholderText="在此输入笔记内容..."
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontSize="16"
                 VerticalAlignment="Stretch"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 TextChanged="ContentBox_TextChanged"/>
        
        <!-- Auto-save indicator -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,0,8" Opacity="0.6">
            <FontIcon x:Name="SaveIcon" Glyph="&#xE73E;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock x:Name="SaveStatus" Text="已保存" Margin="6,0,0,0" FontSize="12" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>
