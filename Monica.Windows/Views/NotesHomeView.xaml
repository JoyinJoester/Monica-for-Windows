<Page
    x:Class="Monica.Windows.Views.NotesHomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Monica.Windows.Models"
    mc:Ignorable="d">

    <Grid Padding="32,24,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="安全笔记" Style="{ThemeResource TitleLargeTextBlockStyle}" TextWrapping="NoWrap"/>
                <TextBlock Text="加密存储的私密笔记" Margin="0,4,0,0"
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="NoWrap"/>
            </StackPanel>
            
            <Button Grid.Column="1" Click="AddButton_Click" Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="14"/>
                    <TextBlock Text="添加笔记" TextWrapping="NoWrap"/>
                </StackPanel>
            </Button>
        </Grid>
        
        <!-- Multi-Select Toolbar (Floating Bottom Bar) -->
        <Border x:Name="MultiSelectToolbar" Grid.Row="1" Visibility="Collapsed"
                Canvas.ZIndex="100"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="12" Padding="16,12" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,24"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <!-- Selection Count -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE762;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock x:Name="SelectedCountText" Text="已选 0 项" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
                
                <Border Width="1" Height="24" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                
                <!-- Actions -->
                <Button x:Name="BatchDeleteBtn" ToolTipService.ToolTip="批量删除" Click="BatchDelete_Click"
                        Background="Transparent" BorderThickness="0" Padding="10">
                    <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                </Button>
                
                <Border Width="1" Height="24" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                
                <!-- Cancel -->
                <Button Content="取消" Click="CancelMultiSelect_Click" 
                        Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>
        
        <!-- Notes List -->
        <ListView x:Name="NotesListView" Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.FilteredItems, Mode=OneWay}"
                  SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:SecureItem">
                    <Grid x:Name="CardGrid" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                          CornerRadius="12" Padding="20"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="2"
                          PointerPressed="NoteCard_PointerPressed"
                          RightTapped="NoteCard_RightTapped">
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="打开" Icon="Edit" Tag="{x:Bind}" Click="OpenMenuItem_Click"/>
                                <MenuFlyoutItem Text="多选" Tag="{x:Bind}" Click="EnterMultiSelect_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Bullets"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="删除" Icon="Delete" Tag="{x:Bind}" Click="DeleteMenuItem_Click"/>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Border Background="{ThemeResource AccentFillColorTertiaryBrush}" 
                                CornerRadius="10" Width="52" Height="52"
                                Grid.RowSpan="2" VerticalAlignment="Top">
                            <FontIcon Glyph="&#xE70B;" FontSize="22" Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Title & Meta -->
                        <StackPanel Grid.Column="1" Margin="16,0,12,0" VerticalAlignment="Top">
                            <TextBlock Text="{x:Bind Title}" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                       FontSize="16" 
                                       TextTrimming="CharacterEllipsis"
                                       MaxLines="1"/>
                            <TextBlock Text="{x:Bind CreatedAt}" 
                                       Margin="0,4,0,0"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Preview Text (second row, spanning columns) -->
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{x:Bind Notes}" 
                                   Margin="16,8,12,0"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                   FontSize="13"
                                   TextTrimming="CharacterEllipsis"
                                   MaxLines="2"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <!-- Empty State -->
        <StackPanel x:Name="EmptyState" Grid.Row="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Spacing="16">
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                    CornerRadius="48" Width="96" Height="96" HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE70B;" FontSize="40" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="暂无笔记" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"/>
            <TextBlock Text="添加您的私密笔记，安全加密存储" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <ProgressRing x:Name="LoadingRing" Grid.Row="1" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
