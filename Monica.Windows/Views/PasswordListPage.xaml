<Page
    x:Class="Monica.Windows.Views.PasswordListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Monica.Windows.Models"
    mc:Ignorable="d">

    <Grid Padding="16,16,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <!-- Wide layout (default) -->
                    <VisualState x:Name="WideState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="1050"/>
                        </VisualState.StateTriggers>
                    </VisualState>
                    <!-- Narrow layout -->
                    <VisualState x:Name="NarrowState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="TitlePanel.Visibility" Value="Collapsed"/>
                            <Setter Target="FilterButton.Visibility" Value="Collapsed"/>
                            <Setter Target="AddButtonText.Visibility" Value="Collapsed"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            
            <StackPanel x:Name="TitlePanel" VerticalAlignment="Center">
                <TextBlock Text="密码管理" Style="{ThemeResource TitleLargeTextBlockStyle}" 
                           TextWrapping="NoWrap"/>
                <TextBlock x:Name="CountText" Text="0 项" Margin="0,4,0,0"
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <!-- Filter Button -->
                <DropDownButton x:Name="FilterButton" Content="全部">
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="全部" Tag="All" Click="FilterOption_Click"/>
                            <MenuFlyoutItem Text="未分类" Tag="Uncategorized" Click="FilterOption_Click"/>
                            <MenuFlyoutItem Text="未标星" Tag="NotFavorite" Click="FilterOption_Click"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <AutoSuggestBox x:Name="SearchBox" PlaceholderText="搜索..." 
                                MinWidth="100" MaxWidth="200"
                                QueryIcon="Find" TextChanged="SearchBox_TextChanged"
                                VerticalAlignment="Center"/>
                <Button x:Name="AddButton" Click="AddButton_Click" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="14"/>
                        <TextBlock x:Name="AddButtonText" Text="添加密码" TextWrapping="NoWrap"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Multi-Select Toolbar (Floating Bottom Bar) -->
        <Border x:Name="MultiSelectToolbar" Grid.Row="1" Visibility="Collapsed"
                Canvas.ZIndex="100"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="12" Padding="16,12" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,24"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <!-- Selection Count -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE762;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock x:Name="SelectedCountText" Text="已选 0 项" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
                
                <Border Width="1" Height="24" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                
                <!-- Actions -->
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button x:Name="BatchFavoriteBtn" ToolTipService.ToolTip="批量收藏" Click="BatchFavorite_Click"
                            Background="Transparent" BorderThickness="0" Padding="10">
                        <FontIcon Glyph="&#xE734;" FontSize="18"/>
                    </Button>
                    <Button x:Name="BatchCategoryBtn" ToolTipService.ToolTip="添加到分类" Click="BatchAddToCategory_Click"
                            Background="Transparent" BorderThickness="0" Padding="10">
                        <FontIcon Glyph="&#xE8EC;" FontSize="18"/>
                    </Button>
                    <Button x:Name="BatchDeleteBtn" ToolTipService.ToolTip="批量删除" Click="BatchDelete_Click"
                            Background="Transparent" BorderThickness="0" Padding="10">
                        <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                    </Button>
                </StackPanel>
                
                <Border Width="1" Height="24" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                
                <!-- Cancel -->
                <Button Content="取消" Click="CancelMultiSelect_Click" 
                        Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>
        
        <!-- Password List -->
        <ListView x:Name="PasswordListView" Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.FilteredPasswords, Mode=OneWay}"
                  SelectionMode="None" SelectionChanged="PasswordListView_SelectionChanged"
                  Margin="0,0,0,0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:PasswordEntry">
                    <Grid x:Name="CardGrid" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                          CornerRadius="8" Padding="16" 
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                          BorderThickness="2"
                          PointerPressed="CardGrid_PointerPressed">
                        <!-- Context Menu -->
                        <Grid.ContextFlyout>
                            <MenuFlyout Opening="ContextMenuFlyout_Opening">
                                <MenuFlyoutItem x:Name="FavoriteMenuItem" Text="收藏" Tag="{x:Bind}" Click="ToggleFavorite_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="OutlineStar"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="多选" Tag="{x:Bind}" Click="EnterMultiSelect_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Bullets"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="编辑" Tag="{x:Bind}" Click="EditEntry_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Edit"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="复制密码" Tag="{x:Bind}" Click="CopyPassword_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Copy"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="复制账号" Tag="{x:Bind}" Click="CopyUsername_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Contact"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="删除" Tag="{x:Bind}" Click="DeleteEntry_Click" 
                                                Foreground="{ThemeResource SystemFillColorCriticalBrush}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Delete"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Avatar Icon -->
                        <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                CornerRadius="24" Width="48" Height="48">
                            <TextBlock Text="{x:Bind TitleInitial}" FontSize="20" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind Title}" Style="{ThemeResource BodyStrongTextBlockStyle}" FontSize="15"/>
                                <FontIcon Glyph="&#xE735;" FontSize="14" Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                          Visibility="{x:Bind IsFavorite}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                <FontIcon Glyph="&#xE77B;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind Username}" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                            <Button ToolTipService.ToolTip="复制用户名" Tag="{x:Bind}" Click="CopyUsername_Click"
                                    Background="Transparent" BorderThickness="0" Padding="10">
                                <FontIcon Glyph="&#xE8C8;" FontSize="16"/>
                            </Button>
                            <Button ToolTipService.ToolTip="复制密码" Tag="{x:Bind}" Click="CopyPassword_Click"
                                    Background="Transparent" BorderThickness="0" Padding="10">
                                <FontIcon Glyph="&#xE8D7;" FontSize="16"/>
                            </Button>
                            <Button ToolTipService.ToolTip="编辑" Tag="{x:Bind}" Click="EditEntry_Click"
                                    Background="Transparent" BorderThickness="0" Padding="10">
                                <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                            </Button>
                            <Button ToolTipService.ToolTip="删除" Tag="{x:Bind}" Click="DeleteEntry_Click"
                                    Background="Transparent" BorderThickness="0" Padding="10">
                                <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <!-- Empty State -->
        <StackPanel x:Name="EmptyState" Grid.Row="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed" Spacing="16">
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                    CornerRadius="48" Width="96" Height="96" HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE8D7;" FontSize="40" 
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="暂无密码" Style="{ThemeResource SubtitleTextBlockStyle}" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="点击右上角「添加密码」按钮添加您的第一个密码" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center"/>
        </StackPanel>
        
        <!-- Loading -->
        <ProgressRing x:Name="LoadingRing" Grid.Row="1" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      IsActive="False"/>
    </Grid>
</Page>
