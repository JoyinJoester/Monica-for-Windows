<Page
    x:Class="Monica.Windows.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="32,24,32,24">
        <StackPanel Spacing="24" HorizontalAlignment="Stretch">
            <TextBlock Text="设置" Style="{ThemeResource TitleLargeTextBlockStyle}" TextWrapping="NoWrap"/>

            <!-- Security Analysis Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="安全分析" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE9D9;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="密码健康检查" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="检测弱密码、重复密码和泄露风险" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="开始分析" Click="SecurityAnalysis_Click"/>
                    </Grid>
                    
                </StackPanel>
            </StackPanel>

            <!-- Security Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="安全设置" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    
                    <!-- Change Master Password -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE8D7;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="修改主密码" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="定期修改主密码可提高安全性" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="修改" Click="ChangePassword_Click"/>
                    </Grid>
                    
                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                    
                    <!-- Security Questions -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE9CE;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="密保问题" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="设置密保问题以便找回主密码" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="设置" Click="SecurityQuestions_Click"/>
                    </Grid>

                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                    
                    <!-- Reset Master Password -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE72C;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="重设主密码" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="通过密保问题重设主密码" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="重设" Click="ResetPassword_Click"/>
                    </Grid>
                    
                </StackPanel>
            </StackPanel>

            <!-- Data Management Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="数据管理" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    
                    <!-- Import -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE8B5;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="导入数据" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="从文件导入密码和数据" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="导入" Click="Import_Click"/>
                    </Grid>
                    
                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                    
                    <!-- Export -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xEDE1;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="导出数据" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="将密码和数据导出为加密文件" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="导出" Click="Export_Click"/>
                    </Grid>

                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                    
                    <!-- WebDAV -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE753;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="WebDAV 同步" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="通过 WebDAV 同步数据到云端" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="配置" Click="WebDAV_Click"/>
                    </Grid>
                    
                </StackPanel>
            </StackPanel>

            <!-- General Settings Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="通用设置" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    
                    <!-- Language -->
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE774;" FontSize="20" VerticalAlignment="Center" Width="32"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="语言" Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="选择界面显示语言" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ComboBox x:Name="LanguageCombo" Width="120" SelectedIndex="0" SelectionChanged="Language_Changed">
                            <ComboBoxItem Content="简体中文"/>
                            <ComboBoxItem Content="English"/>
                        </ComboBox>
                    </Grid>
                    
                </StackPanel>
            </StackPanel>

            <!-- About Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="关于" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                      CornerRadius="8" Padding="16"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Image Source="/Assets/StoreLogo.png" Width="64" Height="64" Margin="0,0,24,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="Monica Password Manager" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.AppVersion}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <HyperlinkButton Content="GitHub Repository" Command="{x:Bind ViewModel.OpenGitHubCommand}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Danger Zone -->
            <StackPanel Spacing="8">
                <TextBlock Text="危险区域" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" 
                            BorderBrush="{ThemeResource SystemFillColorCriticalBrush}" BorderThickness="1">
                    
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE74D;" FontSize="20" VerticalAlignment="Center" Width="32" 
                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="清空所有数据" Style="{ThemeResource BodyTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            <TextBlock Text="这将永久删除所有保存的密码和设置" Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="清空" 
                                Command="{x:Bind ViewModel.ClearDatabaseCommand}"
                                Background="{ThemeResource SystemFillColorCriticalBrush}"
                                Foreground="White"/>
                    </Grid>
                    
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
