<Page
    x:Class="Monica.Windows.Views.TotpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Monica.Windows.Models"
    mc:Ignorable="d">

    <Grid Padding="32,24,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="两步验证" Style="{ThemeResource TitleLargeTextBlockStyle}" TextWrapping="NoWrap"/>
                <TextBlock Text="TOTP 验证器" Margin="0,4,0,0"
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="NoWrap"/>
            </StackPanel>
            
            <Button Grid.Column="1" Click="AddButton_Click" Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="14"/>
                    <TextBlock Text="添加验证器" TextWrapping="NoWrap"/>
                </StackPanel>
            </Button>
        </Grid>
        
        <!-- Multi-Select Toolbar (Floating Bottom Bar) -->
        <Border x:Name="MultiSelectToolbar" Grid.Row="1" Visibility="Collapsed"
                Canvas.ZIndex="100"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="12" Padding="16,12" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,24"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <!-- Selection Count -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE762;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock x:Name="SelectedCountText" Text="已选 0 项" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
                
                <Border Width="1" Height="24" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                
                <!-- Actions -->
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button x:Name="BatchFavoriteBtn" ToolTipService.ToolTip="批量标星" Click="BatchFavorite_Click"
                            Background="Transparent" BorderThickness="0" Padding="10">
                        <FontIcon Glyph="&#xE734;" FontSize="18"/>
                    </Button>
                    <Button x:Name="BatchDeleteBtn" ToolTipService.ToolTip="批量删除" Click="BatchDelete_Click"
                            Background="Transparent" BorderThickness="0" Padding="10">
                        <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                    </Button>
                </StackPanel>
                
                <Border Width="1" Height="24" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                
                <!-- Cancel -->
                <Button Content="取消" Click="CancelMultiSelect_Click" 
                        Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>
        
        <!-- TOTP List -->
        <ListView x:Name="TotpListView" Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.FilteredItems, Mode=OneWay}"
                  SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:SecureItem">
                    <Grid x:Name="CardGrid" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                          CornerRadius="8" Padding="16"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="2"
                          PointerPressed="CardGrid_PointerPressed"
                          RightTapped="CardGrid_RightTapped">
                        <!-- Context Menu -->
                        <Grid.ContextFlyout>
                            <MenuFlyout Opening="ContextMenuFlyout_Opening">
                                <MenuFlyoutItem Text="复制" Tag="{x:Bind}" Click="CopyMenuItem_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Copy"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="编辑" Tag="{x:Bind}" Click="EditMenuItem_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Edit"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="标星" Tag="{x:Bind}" Click="ToggleFavorite_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="OutlineStar"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="多选" Tag="{x:Bind}" Click="EnterMultiSelect_Click">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Bullets"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="删除" Tag="{x:Bind}" Click="DeleteMenuItem_Click" 
                                                Foreground="{ThemeResource SystemFillColorCriticalBrush}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Delete"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon with Progress Ring -->
                        <Grid Width="48" Height="48">
                            <ProgressRing Width="48" Height="48" 
                                          IsIndeterminate="False" Value="{x:Bind TotpProgress, Mode=OneWay}" Maximum="100"
                                          Background="{ThemeResource ControlFillColorSecondaryBrush}"
                                          Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <FontIcon Glyph="&#xE8D7;" FontSize="18" 
                                      Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind Title}" Style="{ThemeResource BodyStrongTextBlockStyle}" FontSize="15"/>
                                <FontIcon Glyph="&#xE735;" FontSize="14" Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                          Visibility="{x:Bind IsFavorite}"/>
                            </StackPanel>
                            <TextBlock Text="{x:Bind Notes}" Margin="0,2,0,0"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Style="{ThemeResource CaptionTextBlockStyle}"/>
                        </StackPanel>
                        
                        <!-- Code Display -->
                        <TextBlock Grid.Column="2" Text="{x:Bind TotpCode, Mode=OneWay}" FontSize="28" FontFamily="Consolas" 
                                   FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"
                                   Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                        
                        <!-- Time Remaining -->
                        <TextBlock Grid.Column="3" Text="{x:Bind TotpTimeRemaining, Mode=OneWay}" 
                                   FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                        <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4">
                             <Button ToolTipService.ToolTip="复制" Tag="{x:Bind}" Click="CopyButton_Click"
                                     Background="Transparent" BorderThickness="0" Padding="10">
                                <FontIcon Glyph="&#xE8C8;" FontSize="16"/>
                            </Button>
                            <Button ToolTipService.ToolTip="删除" Tag="{x:Bind}" Click="DeleteButton_Click"
                                    Background="Transparent" BorderThickness="0" Padding="10">
                                <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <!-- Empty State -->
        <StackPanel x:Name="EmptyState" Grid.Row="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Spacing="16">
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                    CornerRadius="48" Width="96" Height="96" HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE8D7;" FontSize="40" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="暂无验证器" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"/>
            <TextBlock Text="添加 TOTP 两步验证，增强账户安全性" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <ProgressRing x:Name="LoadingRing" Grid.Row="1" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
