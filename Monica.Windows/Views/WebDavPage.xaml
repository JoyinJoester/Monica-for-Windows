<Page
    x:Class="Monica.Windows.Views.WebDavPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32,24,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Spacing="4">
                <TextBlock Text="WebDAV 同步" Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                <TextBlock Text="通过 WebDAV 服务同步您的数据到云端" 
                           Style="{ThemeResource BodyTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <Button x:Name="BackupButton" Click="BackupButton_Click" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE898;" />
                        <TextBlock Text="立即备份"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RestoreButton" Click="RestoreButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" />
                        <TextBlock Text="从云端恢复"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Progress Overlay (Displayed on top if active) -->
        <StackPanel x:Name="ProgressSection" Grid.Row="1" Canvas.ZIndex="100" 
                    Visibility="Collapsed" Spacing="8" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="20" Margin="0,20,0,0"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    >
            <StackPanel.Shadow>
                <ThemeShadow/>
            </StackPanel.Shadow>
            <TextBlock x:Name="ProgressStatusText" Text="正在处理..." Style="{ThemeResource BodyTextBlockStyle}"/>
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Width="200"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/> <!-- Config Column -->
                <ColumnDefinition Width="*"/>   <!-- History Column -->
            </Grid.ColumnDefinitions>

            <!-- Left Column: Config & Options -->
            <StackPanel Grid.Column="0" Spacing="24">
                <!-- Connection Status -->
                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                      CornerRadius="8" Padding="16"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="StatusIndicator" Width="12" Height="12" CornerRadius="6" 
                                Background="{ThemeResource SystemFillColorCautionBrush}" 
                                VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" x:Name="ConnectionStatusText" Text="未连接" 
                                   Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Grid.Row="1" x:Name="ServerUrlText" Text="点击配置以设置 WebDAV 服务器" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="24,4,0,32" TextTrimming="CharacterEllipsis"/>
                               
                    <Button Grid.Row="1" x:Name="ConfigureButton" Content="配置服务器" 
                            Click="ConfigureButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,12,0,0"/>
                </Grid>

                <!-- Backup Options Group -->
                <StackPanel Spacing="16">
                    <TextBlock Text="备份选项" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    
                    <StackPanel Spacing="8">
                        <CheckBox x:Name="IncludePasswordsCheckBox" Content="密码" IsChecked="True"/>
                        <CheckBox x:Name="IncludeTotpCheckBox" Content="两步验证 (TOTP)" IsChecked="True"/>
                        <CheckBox x:Name="IncludeNotesCheckBox" Content="安全笔记" IsChecked="True"/>
                        <CheckBox x:Name="IncludeCardsCheckBox" Content="银行卡" IsChecked="True"/>
                        <CheckBox x:Name="IncludeDocumentsCheckBox" Content="证件" IsChecked="True"/>
                        <CheckBox x:Name="IncludeImagesCheckBox" Content="附件图片" IsChecked="True"/>
                        <CheckBox x:Name="IncludeCategoriesCheckBox" Content="分类信息" IsChecked="True"/>
                    </StackPanel>

                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                    <ToggleSwitch x:Name="EnableEncryptionToggle" Header="启用备份加密" 
                                  OffContent="明文备份" OnContent="加密备份" IsOn="False"
                                  Toggled="EnableEncryptionToggle_Toggled"/>
                    
                    <PasswordBox x:Name="EncryptionPasswordBox" Header="加密密码" 
                                 PlaceholderText="设置备份文件的加密密码"
                                 Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Column: History -->
            <Grid Grid.Column="1" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                  CornerRadius="8" 
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="备份历史" Margin="20,16" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                
                <ListView x:Name="BackupHistoryList" Grid.Row="1" Padding="12,0,12,12" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8,12" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding FileName}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{Binding DateString}" 
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="恢复" Tag="{Binding FileName}"
                                        Click="RestoreFromHistory_Click"/>
                                <Button Grid.Column="2" Margin="8,0,0,0" 
                                        Background="Transparent" BorderThickness="0"
                                        Tag="{Binding FileName}"
                                        Click="DeleteBackup_Click"
                                        ToolTipService.ToolTip="删除备份">
                                    <SymbolIcon Symbol="Delete" Foreground="Red"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <TextBlock x:Name="BackupHistoryText" Grid.Row="1" Text="暂无备份记录" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Style="{ThemeResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
